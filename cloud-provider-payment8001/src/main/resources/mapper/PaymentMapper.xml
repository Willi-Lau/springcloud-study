<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lwy.demo.dao.PaymentDao">

<!--    useGeneratedKeys 作用是返回自增后的值 keyProperty 是绑定自增字段-->
    <insert id="create" parameterType="com.lwy.demo.entity.Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial) values (#{serial});
    </insert>

    <select id="getPaymentById" parameterType="Long" resultType="Payment">
        select * from payment where id = #{id};
    </select>



</mapper>